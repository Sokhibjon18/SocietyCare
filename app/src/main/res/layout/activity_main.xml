<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoSplash"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/society"
        app:layout_constraintWidth_percent="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintDimensionRatio="h, 1"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/society"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logoSplash"
        app:layout_constraintEnd_toEndOf="@id/logoSplash"
        app:layout_constraintStart_toStartOf="@id/logoSplash"
        android:text="@string/society"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@id/care"
        android:fontFamily="@font/open_sans"/>

    <TextView
        android:id="@+id/care"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/society"
        app:layout_constraintEnd_toEndOf="@id/logoSplash"
        app:layout_constraintStart_toStartOf="@id/logoSplash"
        android:text="@string/care"
        android:textColor="@android:color/black"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>